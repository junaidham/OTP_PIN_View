<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2">

        <View
            android:id="@+id/view_one"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#141414" />

        <View
            android:id="@+id/view_two"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPrimaryDark" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bn_tv_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/login_card"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:weightSum="6">

        <TextView
            android:id="@+id/tv_pinOne"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/login_text_background"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/colorAccent"
            android:textSize="19sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_pinTwo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/login_text_background"
            android:gravity="center"
            android:text="2"
            android:textColor="@color/colorAccent"
            android:textSize="19sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_pinThree"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/login_text_background"
            android:gravity="center"
            android:text="3"
            android:textColor="@color/colorAccent"
            android:textSize="19sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_pinFour"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/login_text_background"
            android:gravity="center"
            android:text="4"
            android:textColor="@color/colorAccent"
            android:textSize="19sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_pinFive"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/login_text_background"
            android:gravity="center"
            android:text="5"
            android:textColor="@color/colorAccent"
            android:textSize="19sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tv_pinSix"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/login_text_background"
            android:gravity="center"
            android:text="6"
            android:textColor="@color/colorAccent"
            android:textSize="19sp"
            android:textStyle="bold" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/login_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="6dp"
        app:cardElevation="1dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/bn_btn_linear_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="25dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <Button
                    android:id="@+id/btn_login_one"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/bn_btn_login_number_design"
                    android:text="1"
                    android:textColor="@color/colorText"
                    android:textSize="17sp" />

                <Button
                    android:id="@+id/btn_login_two"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/bn_btn_login_number_design"
                    android:text="2"
                    android:textColor="@color/colorText"
                    android:textSize="17sp" />

                <Button
                    android:id="@+id/btn_login_three"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/bn_btn_login_number_design"
                    android:text="3"
                    android:textColor="@color/colorText"
                    android:textSize="17sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bn_btn_linear_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bn_btn_linear_one"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <Button
                    android:id="@+id/btn_login_four"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/bn_btn_login_number_design"
                    android:text="4"
                    android:textColor="@color/colorText"
                    android:textSize="17sp" />

                <Button
                    android:id="@+id/btn_login_five"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/bn_btn_login_number_design"
                    android:text="5"
                    android:textColor="@color/colorText"
                    android:textSize="17sp" />

                <Button
                    android:id="@+id/btn_login_six"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/bn_btn_login_number_design"
                    android:text="6"
                    android:textColor="@color/colorText"
                    android:textSize="17sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bn_btn_linear_three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bn_btn_linear_two"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <Button
                    android:id="@+id/btn_login_seven"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/bn_btn_login_number_design"
                    android:text="7"
                    android:textColor="@color/colorText"
                    android:textSize="17sp" />

                <Button
                    android:id="@+id/btn_login_eight"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/bn_btn_login_number_design"
                    android:text="8"
                    android:textColor="@color/colorText"
                    android:textSize="17sp" />

                <Button
                    android:id="@+id/btn_login_nine"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/bn_btn_login_number_design"
                    android:text="9"
                    android:textColor="@color/colorText"
                    android:textSize="17sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bn_btn_linear_four"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bn_btn_linear_three"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="50dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <Button
                    android:id="@+id/btn_login_clear"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:text="clear"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:textAllCaps="false"
                    android:textColor="#00CFF7"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/btn_login_zero"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/bn_btn_login_number_design"
                    android:text="0"
                    android:textColor="@color/colorText"
                    android:textSize="17sp" />

                <ImageView
                    android:id="@+id/btn_login_delete"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:padding="14dp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:src="@drawable/ic_delete_text" />
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/bn_btn_login"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@+id/login_card"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-27dp"
        android:background="@drawable/bn_btn_login_design"
        android:text="Login"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="15sp" />


</RelativeLayout>